@import org.shuzu.generator.*
@args Site site
@args Organization orgx
@args Repository repo

@extends("layout")

<div>
    <div>@repo.name@</div>
    <div>@repo.description@</div>
    @if(repo.getReadmeFile()!=null) {
    <div class="markdown">@repo.getReadmeFile().getContent().raw()</div>
    }
</div>

@for(ProjectFile file: repo.codeFiles@) {
<div class="code-file">
    <h3>@file.name@</h3>
    <div><pre>@file.contentEscaped()</pre></div>
</div>
}
